generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  first_name String
  last_name  String
  email      String
  password   String
  role       String
  Order      Order[]
}

model Menu {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  stock Int
  photo String
  price Int
  type  String
  Order Order[]
}

model Order {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  total_order Int
  comment     String?
  menu        Menu    @relation(fields: [menuId], references: [id])
  menuId      String  @db.ObjectId
  user        User    @relation(fields: [userId], references: [id])
  userId      String  @db.ObjectId
}
